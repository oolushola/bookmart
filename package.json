{
  "name": "bookmart",
  "version": "1.0.0",
  "description": "Backend ONLY for a book store",
  "main": "app.js",
  "scripts": {
    "create": "babel-node api/database/create-tables",
    "drop": "babel-node api/database/drop-tables",
    "test": "cross-env NODE_ENV=test nyc --require @babel/register  mocha api/test/*.js --exit",
    "start": "babel-node api/app.js",
    "serve": "babel-watch api/app.js",
    "lint": "eslint",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "test-db": "npm run drop && npm run create && cross-env NODE_ENV=test nyc --require @babel/register  mocha api/test/*.js --exit"
  },
  "nyc": {
    "require": [
      "@babel/register"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/oolushola/bookmart.git"
  },
  "keywords": [
    "users",
    "authentication",
    "authorization",
    "API"
  ],
  "author": "Olushola O.",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/oolushola/bookmart/issues"
  },
  "homepage": "https://github.com/oolushola/bookmart#readme",
  "dependencies": {
    "@babel/cli": "^7.4.3",
    "@babel/core": "^7.4.3",
    "@babel/node": "^7.2.2",
    "@babel/plugin-transform-regenerator": "^7.4.3",
    "@babel/plugin-transform-runtime": "^7.4.3",
    "@babel/polyfill": "^7.4.3",
    "@babel/preset-env": "^7.4.3",
    "@babel/register": "^7.4.0",
    "@babel/runtime": "^7.4.3",
    "babel-watch": "^7.0.0",
    "bcrypt": "^3.0.5",
    "bcrypt-nodejs": "0.0.3",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.3",
    "chai": "^4.2.0",
    "chai-http": "^4.2.1",
    "cors": "^2.8.5",
    "coveralls": "^3.0.3",
    "dotenv": "^7.0.0",
    "express": "^4.16.4",
    "joi": "^14.3.1",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "mocha": "^6.0.2",
    "nyc": "^13.3.0",
    "pg": "^7.10.0"
  },
  "engines": {
    "node": "10.15.1"
  },
  "devDependencies": {
    "babel-watch": "^7.0.0",
    "cross-env": "^5.2.0"
  }
}
